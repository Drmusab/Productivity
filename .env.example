# =====================================================
# Productivity OS Environment Configuration
# =====================================================

# Application Version (auto-detected from package.json if not set)
APP_VERSION=1.0.0

# Environment Mode
NODE_ENV=development

# =====================================================
# Backend Configuration
# =====================================================
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/productivity.db
SCHEMA_VERSION=1

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# =====================================================
# File Storage
# =====================================================
UPLOAD_DIR=./attachments
VAULT_PATH=./data/vaults
MAX_FILE_SIZE=10485760  # 10MB

# =====================================================
# Backup Configuration
# =====================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# =====================================================
# Feature Flags
# =====================================================
NOTIFICATION_ENABLED=true
ENABLE_CACHE=true
ENABLE_AI_FEATURES=false

# =====================================================
# External Integrations (Optional)
# =====================================================
N8N_API_KEY=

# AI Configuration (if enabled)
# OPENAI_API_KEY=
# AI_MODEL=gpt-4o

# =====================================================
# Development Settings
# =====================================================
# Hot reload polling for Docker
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# =====================================================
# Plane Integration
# =====================================================
PLANE_ENABLED=true
PLANE_API_URL=http://plane-api:8000
PLANE_WEB_URL=http://localhost/plane
PLANE_SECRET_KEY=change-this-to-random-secret-key

# =====================================================
# Shared Infrastructure (PostgreSQL, Redis, etc.)
# =====================================================
POSTGRES_USER=productivity
POSTGRES_PASSWORD=change-this-to-secure-password
POSTGRES_HOST=productivity-postgres
POSTGRES_PORT=5432

REDIS_HOST=productivity-redis
REDIS_PORT=6379
REDIS_URL=redis://productivity-redis:6379/

RABBITMQ_USER=plane
RABBITMQ_PASSWORD=change-this-to-secure-password
RABBITMQ_VHOST=plane

MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-this-to-secure-key

# =====================================================
# Auth Bridge
# =====================================================
AUTH_BRIDGE_JWT_SECRET=change-this-to-jwt-secret
AUTH_BRIDGE_SESSION_SECRET=change-this-to-session-secret

# =====================================================
# Data Bridge
# =====================================================
PLANE_WEBHOOK_SECRET=change-this-to-webhook-secret