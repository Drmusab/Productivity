# Desktop App Development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install dependencies for Electron and native modules
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    python3 \
    make \
    g++

# Set environment for Puppeteer/Electron
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Copy package files
COPY apps/desktop/package*.json ./

# Harden npm for deterministic installs and avoid stale cache artifacts
RUN npm config set registry https://registry.npmjs.org/ \
    && npm config set fetch-retries 5 \
    && npm config set fetch-retry-mintimeout 10000 \
    && npm config set fetch-retry-maxtimeout 60000 \
    && npm config set prefer-offline false \
    && npm config set cache /tmp/npm-cache --global

# Install dependencies using the lockfile to surface real inconsistencies
RUN npm ci --no-audit --no-fund

# Copy source code
COPY apps/desktop/ .

# Expose port for React dev server
EXPOSE 3000

# Start development server
CMD ["npm", "start"]
